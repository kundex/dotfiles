[colors]
;Die ersten zwei Stellen definieren Transparenz:
background = #BB2F343F 
foreground = #83AF9B
foreground-alt = #fff7bc

[global/wm]
margin-bottom = 5

[bar/oben]
width = 100%
height = 27
offset-y = 3
radius = 16.0
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
padding = 3
module-margin = 1

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = Siji:style=Regular
font-3 = Font Awesome 5 Brands,Font Awesome 5 Brands Regular:style=Regular
font-4 = Font Awesome 5 Free,Font Awesome 5 Free Solid:style=Solid
font-5 = Font Awesome 5 Free,Font Awesome 5 Free Regular:style=Regular

modules-left = networkspeeddown networkspeedup xwindow 
modules-center = herbstluftwm
modules-right = updates pulseaudio cpu memory bluetooth temperature date poweroff

separator = »
locale = de_DE.UTF-8

cursor-click = pointer
cursor-scroll = ns-resize

################################## Module #############################

[module/networkspeeddown]
type = internal/network
interface = enp109s0f1
label-connected = "%downspeed:7%"
format-connected-prefix = "  "
format-connected-prefix-foreground = #0a81f5

[module/networkspeedup]
type = internal/network
interface = enp109s0f1
label-connected = "%upspeed:7%"
label-connected-foreground = #FE4365
format-connected-prefix = " "
format-connected-prefix-foreground = #0a81f5

[module/xwindow]
type = internal/xwindow
format-foreground = ${colors.foreground-alt}
label = "%title:22:...%"

[module/herbstluftwm]
type = custom/script
exec = ~/.config/polybar/scripts/herbstluft.sh
;Für kontinuierlichen Output
tail = true 

[module/updates]
type = custom/script
exec = ~/.config/polybar/scripts/check-all-updates.sh
interval = 1000
label = Updates: %output%
format-foreground = ${colors.foreground-alt}
format-background = ${colors.background}
format-prefix = "  "
format-prefix-foreground = ${colors.foreground}

[module/pulseaudio]
type = internal/pulseaudio
format-volume-prefix = " "
format-volume-prefix-foreground = ${colors.foreground}
format-volume = <label-volume> <bar-volume>
label-volume = " %percentage%%"
label-volume-foreground = ${colors.foreground-alt}
label-muted =   stumm
label-muted-foreground = #ff5555

bar-volume-width = 10
bar-volume-foreground-0 = #ff5555
bar-volume-foreground-1 = #C8C8A9
bar-volume-foreground-2 = #C8C8A9
bar-volume-foreground-3 = #fec44f 
bar-volume-foreground-4 = #fec44f
bar-volume-foreground-5 = ${colors.foreground}
bar-volume-foreground-6 = ${colors.foreground}
bar-volume-foreground-7 = ${colors.foreground}
bar-volume-foreground-8 = #0a81f5
bar-volume-foreground-9 = #0a81f5
;bar-volume-gradient = false
bar-volume-indicator = 
bar-volume-indicator-foreground = ${colors.foreground-alt}
bar-volume-fill = 
bar-volume-empty = 
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
label = %percentage:2%%
label-foreground = ${colors.foreground-alt}

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
label = %percentage_used%%
label-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 1    
date = " %d.%m.%Y"
time = %H:%M
label = "%date% | %time%"
label-foreground = ${colors.foreground-alt}

[module/bluetooth]
type = custom/script
exec = ~/.config/polybar/scripts/bluetooth.sh
format-prefix = " "
label-foreground = ${colors.foreground-alt}
tail = true
click-left = ~/polybar-scripts/bluetooth.sh --toggle &

[module/poweroff]
type = custom/menu
format-foreground = #0a81f5
expand-right = false
format-spacing = 1
label-open = "  "
label-close = "  neenee "
label-close-foreground = ${colors.foreground}
label-separator = 
label-separator-foreground = ${colors.foreground-alt}
menu-0-0 = "  re-bootn "
menu-0-0-foreground = #fec44f
menu-0-0-exec = menu-open-1
menu-0-1 = "  aus-machn "
menu-0-1-foreground = #ff5555
menu-0-1-exec = menu-open-2
menu-1-0 = "  ok "
menu-1-0-foreground = #fec44f
menu-1-0-exec = systemctl reboot
menu-2-0 = "  ok "
menu-2-0-foreground = #ff5555
menu-2-0-exec = systemctl poweroff
